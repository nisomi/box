<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openBoxButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/open_box"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/optionsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:backgroundTint="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/openBoxButton"
        app:layout_constraintStart_toStartOf="@+id/openBoxButton"
        app:layout_constraintTop_toBottomOf="@+id/openBoxButton" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:backgroundTint="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/optionsButton"
        app:layout_constraintStart_toStartOf="@+id/optionsButton"
        app:layout_constraintTop_toBottomOf="@+id/optionsButton" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:backgroundTint="@color/pink"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/aboutButton"
        app:layout_constraintStart_toStartOf="@+id/aboutButton"
        app:layout_constraintTop_toBottomOf="@+id/aboutButton" />

</androidx.constraintlayout.widget.ConstraintLayout>